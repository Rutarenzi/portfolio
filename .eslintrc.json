{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier",
		"plugin:jest/recommended",
		"plugin:storybook/recommended"
	],
	"overrides": [
		{
			"files": ["src/**/*.spec.js", "src/**/*.spec.jsx"],
			"env": {
				"jest": true
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "jest"],
	"rules": {}
}
